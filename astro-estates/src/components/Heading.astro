---
import type { HTMLTag } from 'astro/types';
type Props = {
    classes: string,
    styles: string,
    level: 1 | 2 | 3 | 4 | 5 | 6,
    content: string
    transisionName: string;
};

const { classes, styles, level, content, transisionName } = Astro.props;
const Element: HTMLTag = `h${level}`;
---

{!!transisionName &&
    <Element transition:name={transisionName} class={classes} style={styles} set:html={content} />
}
{
    !transisionName && (
    <Element class={classes} style={styles} set:html={content} />
    )
}